pipeline{
    agent any
    tools {nodejs "node"}
        stages{
            stage('Checkout'){
                steps{
                echo 'Checking out project from git'
                checkout scm
                }
            }
            stage('Build'){
                steps{
                echo 'Build running'
                sh 'npm install'
                sh 'npm start'
                }
            }
            stage('Test'){
                steps{
                echo 'Tests running'
                }
            }
            stage('Deploy'){
                steps{
                echo 'Deploying web app on cloud'
                echo 'Deployment Successful'
                }
            }
        }
    
}